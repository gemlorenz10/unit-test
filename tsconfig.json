{
    "compileOnSave": true,
    "compilerOptions": {
      "outDir": "./dist",
      "baseUrl": "src",
      "sourceMap": false,
      "declaration": false,
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowJs": true,
      "target": "es5",
      "watch": true,
      "paths": {
        "environments": [
          "./environments"
        ]
      },
      "types": [
        "node"
      ],
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es2016",
        "dom"
      ]
    },
    "exclude": [
      "node_modules",
      "dist"
    ]
  }