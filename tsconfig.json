{
    "compileOnSave": true,
    "include": [
      "src/**/*.ts"
    ],
    "compilerOptions": {
      "module":"commonjs",
      "outDir": "./dist",
      "sourceMap": true,
      "noImplicitAny": false,
      "target": "es5",
      "watch": true,
      // "baseUrl": "./src",
      "types": [
        "node"
      ],
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es2016"
      ]
    },
    "exclude": [
      "node_modules",
      "./dist"
    ]
  }